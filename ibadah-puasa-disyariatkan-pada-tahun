                        <p><strong>Jawaban:</strong></p><p></p><p><strong>s</strong><strong>e</strong><strong>b</strong><strong>e</strong><strong>l</strong><strong>u</strong><strong>m</strong><strong> </strong><strong>b</strong><strong>u</strong><strong>l</strong><strong>a</strong><strong>n</strong><strong> </strong><strong>h</strong><strong>i</strong><strong>j</strong><strong>r</strong><strong>i</strong><strong>a</strong><strong>h</strong><strong> </strong><strong>r</strong><strong>a</strong><strong>m</strong><strong>a</strong><strong>d</strong><strong>a</strong><strong>n</strong><strong> </strong><strong>a</strong><strong>t</strong><strong>a</strong><strong>u</strong><strong> </strong><strong>s</strong><strong>i</strong><strong>d</strong><strong>a</strong><strong>n</strong><strong>g</strong><strong> </strong><strong>i</strong><strong>s</strong><strong>b</strong><strong>a</strong><strong>t</strong></p><p></p><p><strong>s</strong><strong>i</strong><strong>d</strong><strong>a</strong><strong>n</strong><strong>g</strong><strong> </strong><strong>i</strong><strong>s</strong><strong>b</strong><strong>a</strong><strong>t</strong><strong> </strong><strong>a</strong><strong>d</strong><strong>a</strong><strong>l</strong><strong>a</strong><strong>h</strong><strong> </strong><strong>t</strong><strong>a</strong><strong>n</strong><strong>d</strong><strong>a</strong><strong> </strong><strong>m</strong><strong>u</strong><strong>n</strong><strong>c</strong><strong>u</strong><strong>l</strong><strong> </strong><strong>b</strong><strong>u</strong><strong>l</strong><strong>a</strong><strong>n</strong><strong> </strong><strong>s</strong><strong>a</strong><strong>b</strong><strong>i</strong><strong>t</strong><strong> </strong><strong>s</strong><strong>e</strong><strong>b</strong><strong>e</strong><strong>l</strong><strong>u</strong><strong>m</strong><strong> </strong><strong>r</strong><strong>a</strong><strong>m</strong><strong>a</strong><strong>d</strong><strong>a</strong><strong>n</s